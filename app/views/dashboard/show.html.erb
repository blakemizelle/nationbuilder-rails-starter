<div class="max-w-5xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="bg-gray-900 text-white p-6 mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold mb-1">NationBuilder Integration</h1>
        <p class="text-gray-400 text-sm">Connected to <%= @installation.nation_slug %></p>
      </div>
      <%= button_to "Uninstall", uninstall_path, method: :delete, 
          class: "bg-red-600 text-white px-4 py-2 font-medium hover:bg-red-700 transition text-sm",
          data: { turbo_confirm: "Are you sure you want to uninstall this integration?" } %>
    </div>
  </div>

  <!-- Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- Connection Status -->
    <div class="bg-white border border-gray-200 p-4">
      <div class="text-xs font-semibold text-gray-500 uppercase mb-2">Status</div>
      <div class="flex items-center">
        <span class="inline-block w-2 h-2 bg-green-500 mr-2"></span>
        <span class="text-lg font-medium">Active</span>
      </div>
    </div>

    <!-- Nation -->
    <div class="bg-white border border-gray-200 p-4">
      <div class="text-xs font-semibold text-gray-500 uppercase mb-2">Nation Slug</div>
      <div class="text-lg font-medium"><%= @installation.nation_slug %></div>
    </div>

    <!-- Installed At -->
    <div class="bg-white border border-gray-200 p-4">
      <div class="text-xs font-semibold text-gray-500 uppercase mb-2">Installed</div>
      <div class="text-lg font-medium">
        <%= @installation.installed_at.strftime("%b %d, %Y %H:%M") %>
      </div>
    </div>

    <!-- Last Used -->
    <div class="bg-white border border-gray-200 p-4">
      <div class="text-xs font-semibold text-gray-500 uppercase mb-2">Last Used</div>
      <div class="text-lg font-medium">
        <%= time_ago_in_words(@installation.last_used_at) %> ago
      </div>
    </div>
  </div>

  <!-- User Info -->
  <div class="bg-white border border-gray-200 p-6 mb-6">
    <h2 class="text-sm font-semibold text-gray-900 uppercase mb-4">User Information</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <div class="text-xs font-semibold text-gray-500 uppercase mb-1">Username</div>
        <div class="text-base text-gray-900"><%= @user_info["username"] || "N/A" %></div>
      </div>
      
      <div>
        <div class="text-xs font-semibold text-gray-500 uppercase mb-1">Full Name</div>
        <div class="text-base text-gray-900"><%= @user_info["full_name"] || "N/A" %></div>
      </div>
      
      <div>
        <div class="text-xs font-semibold text-gray-500 uppercase mb-1">Email</div>
        <div class="text-base text-gray-900"><%= @user_info["email"] || "N/A" %></div>
      </div>
      
      <div>
        <div class="text-xs font-semibold text-gray-500 uppercase mb-1">Signup ID</div>
        <div class="text-base text-gray-900"><%= @user_info["id"] || "N/A" %></div>
      </div>
    </div>
  </div>

  <!-- Raw API Response -->
  <div class="bg-white border border-gray-200 p-6">
    <h2 class="text-sm font-semibold text-gray-900 uppercase mb-4">Raw API Response</h2>
    <pre class="bg-gray-50 text-gray-900 p-4 text-xs font-mono overflow-x-auto border border-gray-200"><%= JSON.pretty_generate(@user_info) %></pre>
  </div>
</div>
